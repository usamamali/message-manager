{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "api",
            "image": "usamamali/message-api",
            "hostname": "api",
            "essential": false,
            "memory": 128,
            "memoryReservation": 128,
            "portMappings": [
                {
                    "hostPort": 5001,
                    "containerPort": 5001
                }
            ]
        },
        {
            "name": "ui",
            "image": "usamamali/message-ui",
            "hostname": "ui",
            "essential": false,
            "memory": 128,
            "memoryReservation": 128,
            "links": [
                "api"
            ]
        },
        {
            "name": "proxy",
            "image": "usamamali/message-proxy",
            "hostname": "proxy",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "ui",
                "api"
            ],
            "memory": 128,
            "memoryReservation": 128
        }
    ]
}